[MASTER]
jobs=0
persistent=yes
suggestion-mode=yes

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    line-too-long,
    fixme

[REPORTS]
output-format=colorized
reports=no

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_,id,db

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
