# FastAPI feature flags
PREP_NOTIFY_ENABLED=false

# Payments configuration
PAYMENTS_MODE=mock
PAYMENT_PROVIDER=mock
CURRENCY=AZN
# Optional override for persistent storage (defaults to ~/.baku-reserve-data)
DATA_DIR=
# Optional database override (defaults to sqlite file inside DATA_DIR)
DATABASE_URL=
# Comma-separated list of allowed CORS origins (leave blank to disable cross-origin)
CORS_ALLOW_ORIGINS=http://localhost:8081,http://localhost:19006

# Auth0 (set AUTH0_BYPASS=false in staging/prod)
AUTH0_DOMAIN=dev-qsgi082lyfxd6efi.eu.auth0.com
AUTH0_AUDIENCE=https://api.bakureserve.az
AUTH0_BYPASS=false
AUTH0_REALM=Username-Password-Authentication

# Concierge AI
OPENAI_API_KEY=
CONCIERGE_GPT_MODEL=gpt-3.5-turbo-0125
CONCIERGE_EMBED_MODEL=text-embedding-3-small
CONCIERGE_SUMMARY_MODEL=gpt-4o-mini
CONCIERGE_SUMMARY_MAX_TOKENS=320
CONCIERGE_SUMMARY_TEMPERATURE=0.4
CONCIERGE_MODE=local
AI_SCORE_FLOOR=0.1
CONCIERGE_WEIGHTS=alpha=1.0,beta=1.2,gamma=1.0,delta=0.8,epsilon=0.8,zeta=0.4,eta=1.0

# Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.2
EXPO_PUBLIC_SENTRY_DSN=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW_SECONDS=60
